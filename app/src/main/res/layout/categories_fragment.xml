<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.kflower.gameworld.common.components.AppLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.MainFragment">
        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/layout_px"
            android:paddingVertical="@dimen/dimen_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Categories"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/text_color"
                android:id="@+id/lvCategories"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>
        </LinearLayout>

    </com.kflower.gameworld.common.components.AppLinearLayout>
</layout>