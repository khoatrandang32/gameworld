<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.kflower.gameworld.ui.downloadColection.DownloadCollectionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.kflower.gameworld.common.components.AppLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/layout_px">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginVertical="@dimen/dimen_16"
                android:src="@drawable/ic_left_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_12"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Kho Tải Truyện"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginVertical="@dimen/dimen_16"
                android:src="@drawable/ic_more"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_color" />
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/layout_px"
                    android:layout_marginVertical="@dimen/dimen_8"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="@color/sub_color"
                    android:paddingHorizontal="@dimen/dimen_2">



                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@color/transparent"
                        android:textSize="@dimen/text_size_8"
                        app:tabIndicator="@drawable/bg_button"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorGravity="center"
                        app:tabIndicatorHeight="@dimen/dimen_30"
                        app:tabRippleColor="@color/main_color"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextAppearance="@style/MineCustomTabText"
                        app:tabTextColor="@color/main_color" />
                </LinearLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>