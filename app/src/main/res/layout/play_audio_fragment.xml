<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.kflower.gameworld.ui.play.PlayAudioViewModel" />
    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--            <com.airbnb.lottie.LottieAnimationView-->
<!--                app:lottie_autoPlay="true"-->
<!--                app:lottie_loop="true"-->
<!--                app:lottie_rawRes="@raw/audio_bg"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"/>-->
            <View
                android:background="@drawable/bg_cover_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/layout_px">

                <com.kflower.gameworld.common.components.AppLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_marginVertical="@dimen/dimen_16"
                        android:src="@drawable/ic_left_arrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@{viewModel.item.title}"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        tools:text="Audio Name" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_marginVertical="@dimen/dimen_16"
                        android:src="@drawable/ic_more"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_30"
                            app:cardCornerRadius="300dp"
                            app:cardElevation="@dimen/dimen_10">

                            <ImageView
                                android:id="@+id/imgThumbnail"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_temp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:gravity="center"
                            android:text="@{viewModel.currentPart}"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold"
                            tools:text="Tap 1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:gravity="center"
                            android:text="@{viewModel.item.title}"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold"
                            tools:text="Audio Name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:gravity="center"
                            android:text="@{viewModel.item.author}"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_16"
                            tools:text="Author" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:layout_marginBottom="@dimen/dimen_20"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_26"
                            android:layout_height="@dimen/dimen_26"
                            android:layout_marginHorizontal="@dimen/dimen_20"
                            android:src="@drawable/ic_like_outline"
                            app:tint="@color/hint_color" />

                        <ImageView
                            android:id="@+id/imgDownload"
                            android:layout_width="@dimen/dimen_26"
                            android:layout_height="@dimen/dimen_26"
                            android:layout_marginHorizontal="@dimen/dimen_20"
                            android:src="@drawable/ic_download"
                            app:tint="@color/hint_color" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:id="@+id/inDownloadLayout"
                            android:layout_marginHorizontal="@dimen/dimen_20"
                            android:layout_width="@dimen/dimen_26"
                            android:layout_height="@dimen/dimen_26">
                            <ProgressBar
                                android:id="@+id/downloadProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circle_shape_mini"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                tools:progress="50"
                                android:progressDrawable="@drawable/circular_progress_bar_mini" />
                            <ImageView

                                android:id="@+id/imgStopDownload"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:src="@drawable/ic_stop"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                app:tint="@color/main_color" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/imgList"
                            android:layout_width="@dimen/dimen_26"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_20"
                            android:src="@drawable/ic_list"
                            app:tint="@color/hint_color" />

                        <ImageView
                            android:id="@+id/imgClock"
                            android:layout_width="@dimen/dimen_26"
                            android:layout_height="@dimen/dimen_26"
                            android:layout_marginHorizontal="@dimen/dimen_20"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="@{viewModel.getProgress(viewModel.currentPos,viewModel.duration)}"
                            android:progressDrawable="@drawable/seekbar_style"
                            android:thumb="@drawable/custom_thumb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dimen_16">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.formatSec(viewModel.currentPos)}"
                                tools:text="00:00" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.formatSec(viewModel.duration)}"
                                tools:text="00:00" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_24"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgPre"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:layout_weight="1"
                                android:src="@drawable/ic_prev_solid"
                                app:tint="@color/main_color" />

                            <ImageView
                                android:id="@+id/imgRewind"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:layout_weight="1"
                                android:src="@drawable/ic_solid_media_fast_rewind"
                                app:tint="@color/main_color" />

                            <ProgressBar
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:indeterminate="true"
                                android:indeterminateTint="@color/main_color"
                                android:indeterminateTintMode="src_atop"
                                android:visibility="@{viewModel.isLoading?View.VISIBLE:View.GONE}"
                                tools:visibility="gone" />

                            <ImageView
                                android:id="@+id/imgPausePlay"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_button"
                                android:padding="@dimen/dimen_12"
                                android:src="@{viewModel.isPlaying?@drawable/ic_pause_solid:@drawable/ic_play_solid}"
                                android:visibility="@{!viewModel.isLoading?View.VISIBLE:View.GONE}"
                                app:tint="@color/white"
                                tools:src="@drawable/ic_play_solid" />

                            <ImageView
                                android:id="@+id/imgFoward"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:layout_weight="1"
                                android:src="@drawable/ic_solid_media_fast_forward"
                                app:tint="@color/main_color" />

                            <ImageView
                                android:id="@+id/imgNext"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:layout_weight="1"
                                android:src="@drawable/ic_next_solid"
                                app:tint="@color/main_color" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        <include android:id="@+id/bottom_sheetLayout" layout="@layout/bottom_sheet_select_ep"/>-->
</layout>