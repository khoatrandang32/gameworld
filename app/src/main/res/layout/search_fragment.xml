<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.kflower.gameworld.ui.main.search.SearchViewModel" />
        <import type="android.view.View"/>
    </data>
    <com.kflower.gameworld.common.components.AppLinearLayout
        android:id="@+id/main"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.MainFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/layout_px"
            android:paddingVertical="@dimen/dimen_16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16"
                android:text="Search"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_30" />

            <com.kflower.gameworld.common.components.AppEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Type to search ..."
                app:iconLeftSrc="@drawable/ic_search"
                app:inputType="text"
                app:text="@={viewModel.searchText}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lvGroupSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.searchText.length()>0?View.GONE:View.VISIBLE}"
                tools:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:orientation="vertical"
                android:visibility="@{ viewModel.searchText.length()>0 &amp; viewModel.listAudio.size()>0?View.VISIBLE:View.GONE}"
                tools:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:text="Result"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lvAudioResult"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:visibility="gone"
                android:orientation="vertical"
                android:visibility="@{(!viewModel.isLoading&amp;viewModel.listAudio.size()==0 &amp; viewModel.searchText.length()>0)?View.VISIBLE:View.GONE}">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitCenter"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/search_anim" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp"
                    android:text="No Data Found"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_24" />
            </LinearLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_marginTop="@dimen/dimen_14"
                android:id="@+id/shimmerLayout"
                android:visibility="@{viewModel.isLoading&amp; viewModel.searchText.length()>0?View.VISIBLE:View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/audio_item_vertival_shimmer"/>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

    </com.kflower.gameworld.common.components.AppLinearLayout>
</layout>