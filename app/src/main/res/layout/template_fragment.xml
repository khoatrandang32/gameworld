<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:scrollbarSize="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dimen_20"
            tools:context=".ui.main.MainFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:background="@drawable/bg_rounded_"
                android:elevation="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_4">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:padding="@dimen/dimen_4"
                    android:src="@drawable/default_avatar_1"
                    app:shapeAppearanceOverlay="@style/circle"
                    app:strokeColor="@color/main_color"
                    app:strokeWidth="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:text="Guest"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_24" />

                <ImageView
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_12"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_notification_outline"
                    app:tint="@color/text_color" />
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_20"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <TextView
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_weight="1"
                android:text="Top AudioBook"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="@drawable/bg_rounded_"
                android:elevation="@dimen/dimen_12"
                android:orientation="vertical"
                android:padding="@dimen/dimen_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgTopAudio"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:padding="@dimen/dimen_4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar_1"
                        app:shapeAppearanceOverlay="@style/rounded" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audio Book 1"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" when an unknown printer took a galley of type and scrambled it to make a type specimen book. "
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_14" />
                    </LinearLayout>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dimen_8"
                    android:id="@+id/listViewTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Suggestions for you"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View More"
                        android:textColor="@color/main_color" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listViewSuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>

    </ScrollView>
</layout>