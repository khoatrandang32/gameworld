<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_12"
    android:background="@drawable/bg_edt_layout"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/edt_px"
    android:paddingVertical="@dimen/edt_py">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:letterSpacing="0.2"
        android:textColor="#CC343a40"
        android:textSize="@dimen/text_size_10" />

    <EditText
        android:id="@+id/appEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:imeOptions="actionNext"
        android:lines="1"
        android:paddingVertical="@dimen/dimen_2"
        android:singleLine="true"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>
