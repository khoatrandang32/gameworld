<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.kflower.gameworld.ui.play.PlayAudioViewModel" />
    </data>
    <LinearLayout
        android:background="@drawable/bg_top_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/layout_px">

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:translationZ="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="@dimen/dimen_10">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp">
                        <ImageView
                            android:id="@+id/imgThumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_temp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_bot_top" />
                    </RelativeLayout>



                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dimen_20"
                    android:translationZ="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:paddingHorizontal="@dimen/dimen_8"
                        android:paddingVertical="@dimen/dimen_2"
                        android:background="@drawable/bg_rounded_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{`Tap `+ viewModel.currentPart}"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="Tap 1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{viewModel.item.title}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold"
                        tools:text="Audio Name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{viewModel.item.author}"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_16"
                        tools:text="Author" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/countingLayout"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/dimen_20"
                    android:translationZ="10dp">

                    <LinearLayout
                        android:id="@+id/layoutSelectCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btnSetting"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt15Min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4"
                            android:background="@drawable/bg_rounded_"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dimen_6"
                            android:paddingVertical="@dimen/dimen_2"
                            android:text="15 phút"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt30Min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4"
                            android:layout_marginTop="@dimen/dimen_6"
                            android:background="@drawable/bg_rounded_"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dimen_6"
                            android:paddingVertical="@dimen/dimen_2"
                            android:text="30 phút"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btnSetting"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_rounded_"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/dimen_6">

                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/main_color" />

                        <TextView
                            android:id="@+id/txtTimeCounting"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_4"
                            android:gravity="center"
                            android:text="00:00"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:background="@drawable/bg_button"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dimen_12"
                        android:paddingVertical="@dimen/dimen_2"
                        android:text="Đặt lại"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_26"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:src="@drawable/ic_like_outline"
                    app:tint="@color/hint_color" />

                <ImageView
                    android:id="@+id/imgDownload"
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_26"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:src="@drawable/ic_download"
                    app:tint="@color/hint_color" />

                <ImageView
                    android:id="@+id/imgList"
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:src="@drawable/ic_list"
                    app:tint="@color/hint_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="@{viewModel.getProgress(viewModel.currentPos,viewModel.duration)}"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/custom_thumb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.formatSec(viewModel.currentPos)}"
                        tools:text="00:00" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.formatSec(viewModel.duration)}"
                        tools:text="00:00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPre"
                        android:layout_width="@dimen/dimen_36"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:src="@drawable/ic_prev_solid"
                        app:tint="@color/main_color" />

                    <ImageView
                        android:id="@+id/imgRewind"
                        android:layout_width="@dimen/dimen_36"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:src="@drawable/ic_solid_media_fast_rewind"
                        app:tint="@color/main_color" />

                    <ProgressBar
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/main_color"
                        android:indeterminateTintMode="src_atop"
                        android:visibility="@{viewModel.isLoading?View.VISIBLE:View.GONE}"
                        tools:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgPausePlay"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_button"
                        android:padding="@dimen/dimen_12"
                        android:src="@{viewModel.isPlaying?@drawable/ic_pause_solid:@drawable/ic_play_solid}"
                        android:visibility="@{!viewModel.isLoading?View.VISIBLE:View.GONE}"
                        app:tint="@color/white"
                        tools:src="@drawable/ic_play_solid" />

                    <ImageView
                        android:id="@+id/imgFoward"
                        android:layout_width="@dimen/dimen_36"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:src="@drawable/ic_solid_media_fast_forward"
                        app:tint="@color/main_color" />

                    <ImageView
                        android:id="@+id/imgNext"
                        android:layout_width="@dimen/dimen_36"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:src="@drawable/ic_next_solid"
                        app:tint="@color/main_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>